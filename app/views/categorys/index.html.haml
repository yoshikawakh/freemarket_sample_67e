= render "header"

%nav.breadCrumbs
  %ul.breadCrumbs__a
    %li
      #{@parents.name}

.category
  .category__main
    .category__main__img
    .category__main__index
      .category__main__index__title
      .category__main__index__list--nav
        - @parents.each do |parent|
          = link_to categorys_path(parent), class: "category__main__index__list--nav__root" do
            %p 
              = parent.name

      - @parents.each do |parent|
        .invisual
          .invisual__title
            -# %a{ :href => 'http://google.co.jp', :id => 'anchor1' }
            = link_to categorys_path(parent) do
              %h3
                = parent.name
          .invisual__list
            = link_to categorys_path(), class: "all" do
              -# %p すべ

            - parent.children.each do |children|
              .invisual__list__sub-category-name
                = link_to categorys_path(children), class: "invisual__list__sub-category-name" do
                  %h4
                    = children.name

                    .child_box
                      .child_box__list
                        -# = link_to categorys_path(children), class: "child_box__list__all"
          
                      - children.children.each do |grandchild|
                        = link_to categorys_path(grandchild), class: "child_box__list" do
                          = grandchild.name
          = link_to root_path do
            %i.fa.fa-arrow-up
              ページトップへ

.footer-sub
  .footer-sub__box
    %h2 だれでもかんたん、人生を変えるフリマアプリ
    %p 今すぐ無料ダウンロード
  .footer-sub__app-google
    .footer-sub__app-google__app
      = link_to "https://apps.apple.com/jp/app/itunes-store/id915061235?mt=8" do
        = image_tag 'logo/app.png', height: '40px', width: '135px'
    .footer-sub__app-google__google
      = link_to "https://play.google.com/store/apps?pcampaignid=pcampaignidMKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1" do
        = image_tag 'logo/google-play-badge.png', alt: 'Google Play で手に入れよう', height: '', width: '160px'
.footer
  .footer__contents
    .footer__contents__content
      %h2 FURIMAについて
      %ul
        %li
          = link_to root_path do
            会社概要（運営会社）
        %li
          = link_to root_path do
            プライバシーポリシー
        %li
          = link_to root_path do
            FURIMA利用規約
        %li
          = link_to root_path do
            ポイントに関する特約
    .footer__contents__content
      %h2 FURIMAを見る
      %ul
        %li
          = link_to root_path do
            カテゴリー一覧
        %li
          = link_to root_path do
            ブランド一覧
    .footer__contents__content
      %h2 ヘルプ＆ガイド
      %ul
        %li
          = link_to root_path do
            FURIMAガイド
        %li
          = link_to root_path do
            FURIMAロゴ利用ガイドライン
        %li
          = link_to root_path do
            お知らせ
  .footer__logo
    %h1
      = image_tag 'logo/logo-white.png', height: '44px', width: '154px'
  %p © FURIMA
